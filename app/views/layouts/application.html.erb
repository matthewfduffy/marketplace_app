<!DOCTYPE html>
<html>
  <head>
    <title>RubyBelt</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="errors">
      <% if flash[:errors] %>
        <% flash[:errors].each do |e| %>
          <p class="text-danger"><%= e %></p>
          <% end %>
          <% end %>
  


    </div>
    <% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-md-10">
          <h3>Hello, <%= current_user.first_name %></h3><br /><br />
      </div>
      <div class="col-md-2">

        <%= link_to "Log out", destroy_user_session_path, :method => 'delete' %>
      </div>
    </div>
  </div>
  <% end %>
    <%= yield %>
  </body>
</html>
